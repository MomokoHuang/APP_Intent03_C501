<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_opd1"
        android:layout_margin="20dp"
        android:text="運算元(一)："
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_opd1"
        android:text="100"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@id/textview_opd1"
        app:layout_constraintBaseline_toBaselineOf="@id/textview_opd1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/textview_opd2"
        android:text="運算元(二)："
        app:layout_constraintTop_toBottomOf="@id/textview_opd1"
        app:layout_constraintLeft_toLeftOf="@id/textview_opd1"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edittext_opd2"
        android:text="50"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@id/textview_opd2"
        app:layout_constraintBaseline_toBaselineOf="@id/textview_opd2"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_op"
        android:text="選擇運算子"
        app:layout_constraintTop_toBottomOf="@id/textview_opd2"
        app:layout_constraintLeft_toLeftOf="@id/textview_opd2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_output"
        android:text="運算結果顯示"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_op"
        app:layout_constraintLeft_toLeftOf="@id/btn_op"
        />


</androidx.constraintlayout.widget.ConstraintLayout>